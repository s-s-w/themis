<h2>
	New <%= node.type %>
</h2>

<div class='form'>
	<%= form_for node, url: nodes_path do |f| %>
		<div style='display:none;'>
			<%= f.text_field :parent_id %>
		</div>
		
		<div>
			<%= label_with_errors node, :summary %>
			<%= f.text_area :summary, rows: 3, cols: 100, placeholder: "Summarize your #{node.type.downcase} briefly", style: 'height:auto;' %>
		</div>
		
		<div>
			<%= label_with_errors node, :body %>
			<%= f.text_area :body, rows: 20, cols: 100, placeholder: "Expand on your #{node.type.downcase}", style: 'height:auto;' %>
		</div>
		
		<div class='row'>
			<div class='small-6 columns'>
				<%= f.submit "Publish #{node.type}", :class => 'submit' %>
			</div>
			
			<div class='small-6 columns'>
				<%= back_link_for node, 'Cancel', :class => 'cancel' %>
			</div>
		</div>
	<% end -%>
</div>
