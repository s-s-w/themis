<% is_question_list = ('question' == type_for(node) and 'class' == id_or_class) -%>

<div <%= id_or_class %>='<%= type_for(node) %>'>
	<% if color_type_for(node) -%>
		<div class='color_<%= color_type_for(node) %>'>
		</div>
	<% end -%>
	
	<div class='header'>
		<div class='summary'>
			<%= "<h3>".html_safe unless is_question_list -%>
			
			<% if id_or_class == 'id' -%>
				<%= node.summary -%>
			<% elsif id_or_class == 'class' -%>
				<%= link_to node.summary, node_path(node) -%>
			<% end -%>
			
			<%= "</h3>".html_safe unless is_question_list -%>
		</div>
		
		<div class='actions'>
			<%= link_to 'edit', edit_node_path(node), :class => 'edit' unless is_question_list %>
		</div>
	</div>
	
	<% unless is_question_list -%>
		<div class='body'>
			<%= simple_format node.body %>
		</div>
	<% end -%>
</div>
