<%= link_to 'Ask a question', (new_node_path + '?type=Question'), :class => 'button success' %>

<h1>Questions</h1>

<%= render 'empty', type: 'question' if @questions.blank? -%>

<ul>
	<% @questions.reverse.each do |question| %>
		
		<li>
			<div class='question'>
				<div class='summary'>
					<%= link_to question.summary, node_path(question) %>
				</div>
			</div>
		</li>
		
	<% end -%>
</ul>
